    <div class="row">  
        <div class="col-md-6">
            <div class="box"> 
                <h2> Tasks </h2>
                <div id="more"><i class="fa-solid fa-ellipsis-vertical"></i></div>
                <% for(var i=0; i<newListItem.length; i++) { %>
                <form action="/delete" method="post">
                    <div class="item">
                        
                        <!--<div class="round"> -->
                        <input type="checkbox" name="checkbox" value="<%= newListItem[i]._id %>" onChange="this.form.submit()" id="checkbox">            
                        <label for="checkbox"></label>
                        <p> <%= newListItem[i].name %></p>
                        <br>
                        <form action="/update" method="post">  
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                                Update
                            </button>
                            
                            <!-- Modal -->
                            
                            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel"> Changes </h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    </div>
                                    
                                    <div class="modal-body">
                                        
                                            <label for="task"> Task:  </label><br>
                                            <input type="text" id="task" name="task" placeholder="Update the task">
    
                                        
                                    </div>
                                   
                                    <div class="modal-footer">
                                        <form action="/" method="post">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="button" type="submit" class="btn btn-primary" id="update">Save changes</button> 
                                      </form>
                                    </div>
                                    
                                </div>
                                </div>
                            </div>
                        </form>
                        <!-- </div> -->
                        
                        <br>
                    </div>         
                </form> 
            <% } %>
    
                
                <form class="item" action="/" method="post">
                    <input type="text" name="n"  placeholder="Add a new task"><hr>
                    <button id="b" type="submit" <span id="s2"></span>+</button> 
                </form> 
            </div>
        </div>
        <div class="col-md-6">
            <div class="box1"> 
                <h2> Tasks remaining </h2>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
                  </div>
                <% for(var i=0; i<newListItem.length; i++) { %>
                <form action="/delete" method="post">
                    <div class="item">
                        
                        <!--<div class="round"> -->
                        <input type="checkbox" name="checkbox" value="<%= newListItem[i]._id %>" onChange="this.form.submit()" id="checkbox">            
                        <label for="checkbox"></label>
                        <p> <%= newListItem[i].name %></p>
                        <br>
                        <!-- </div> -->
                    
                        <br>
                    </div>         
                </form> 
            <% } %>
    
                
                <form class="item" action="/" method="post">
                    <input type="text" name="n"  placeholder="Add a new task"><hr>
                    <button id="b" type="submit" <span id="s2"></span>+</button> 
                </form> 
            </div>
        </div>    
    </div>

    


